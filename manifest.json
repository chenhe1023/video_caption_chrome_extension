{
    "manifest_version": 2,
    "name": "Video Caption Extension",
    "description": "This extension load captions from our server and allows user to make bookmarks, comments and correct the captions.",
    "version": "1.0",
    "web_accessible_resources": [
        "pages/menu.html",
        "pages/editor.html",
        "styles/menu.css",
        "scripts/script.js",
        "images/draggable.png"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "public/jquery-2.2.4.min.js", "public/velocity.min.js", "content_scripts/event_handler.js", "/public/jquery-ui/jquery-ui.js", "/public/dragiframe.js"
            ],
            "css": [
              "/public/jquery-ui/jquery-ui.css",
              "/styles/editor_handle.css"                
            ],
            "run_at": "document_end",
            "all_frames":true
        }
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_title": "Load caption!"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://datascience.ischool.syr.edu/*"
    ],
    
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}